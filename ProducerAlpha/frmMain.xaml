                                                                    <DataTemplate>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <Button x:Name="cmdXamlLinkRemoveXaml" Content="Remove Xaml" Height="16" Visibility="{Binding Path=DesignTimeHelper.XamlInfo, Converter={StaticResource XamlLinkRemoveXamlButtonVisibilityConverter}}"/>
                                                                            <Button x:Name="cmdXamlLinkCreateLink" Content="Create Link" Height="16" Visibility="{Binding Path=DesignTimeHelper.XamlInfo, Converter={StaticResource XamlLinkCreateLinkButtonVisibilityConverter}}"/>
                                                                            <Button x:Name="cmdXamlLinkUpdateLink" Content="Update Link" Height="16" Visibility="{Binding Path=DesignTimeHelper.XamlInfo, Converter={StaticResource XamlLinkUpdateLinkButtonVisibilityConverter}}"/>
                                                                            <Button x:Name="cmdXamlLinkRemoveLink" Content="Remove Link" Height="16" Visibility="{Binding Path=DesignTimeHelper.XamlInfo, Converter={StaticResource XamlLinkRemoveLinkButtonVisibilityConverter}}"/>
                                                                        </StackPanel>
                                                                    </DataTemplate>
                                                                </GridViewColumn.CellTemplate>
                                                            </GridViewColumn >

                                                        </GridView>
                                                    </ListView.View>
                                                </ListView >
                                                
                                                <!-- End ListView -->

                                            </Grid>
                                        </TabItem>
                                        <TabItem x:Name="TabResourceLinks" Width="Auto" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                            <TabItem.Header>
                                                <TextBlock Padding="4,0,4,0" Text="Resource Links"/>
                                            </TabItem.Header>

                                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>


                                                <Grid.Resources>
                                                    <!-- Item Template -->
                                                    <Style x:Key="ResourceLinksItemContainerStyle" TargetType ="ListViewItem">
                                                        <!-- Control Main Properties -->
                                                        <Setter Property="FontSize" Value="9"/>
                                                        <Setter Property="Height" Value="16"/>
                                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                        <Setter Property="VerticalContentAlignment"   Value="Stretch" />
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <Binding RelativeSource="{RelativeSource Self}" Converter="{StaticResource RowBackgroundConverter}"/>
                                                            </Setter.Value>
                                                        </Setter>

                                                        <!-- Control Template -->
                                                        <Setter Property ="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType ="{x:Type ListViewItem}">

                                                                    <!-- Control Definition -->
                                                                    <Grid x:Name="xContainer" Height="16" Background ="{TemplateBinding Background}">
                                                                        <GridViewRowPresenter x:Name="ItemContent" Focusable="False" Grid.Row="0" Height="16" TextBlock.Foreground="White">
                                                                        </GridViewRowPresenter>
                                                                    </Grid>

                                                                    <!-- Control Triggers -->
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="true">
                                                                            <Setter Property="Background">
                                                                                <Setter.Value>
                                                                                    <LinearGradientBrush EndPoint="0.5,0.976" StartPoint="0.5,0.039">
                                                                                        <GradientStop Color="#7F777777" Offset="0" />
                                                                                        <GradientStop Color="#35FFFFFF" Offset="1" />
                                                                                    </LinearGradientBrush>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>

                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>

                                                </Grid.Resources>

                                                <!-- Start Broken Resources ListView -->
                                                <ListView x:Name="ManageBrokenResourceLinksListView"
                                                          ItemContainerStyle="{StaticResource ResourceLinksItemContainerStyle}"
                    				                      Background="Black"
				                                          VirtualizingStackPanel.IsVirtualizing="True"
				                                          IsSynchronizedWithCurrentItem="True"
                                                          Grid.Row="0"
                                                          Grid.Column="0"
                                                          BorderBrush="Black"
                                                          ButtonBase.Click="ManageBrokenResourceLinksListView_Click"                                                        
				                                >

                                                    <ListView.View>
                                                        <GridView
						                                   AllowsColumnReorder="False"

                                                        >

                                                            <!-- Column 1: Frame Number  -->
                                                            <GridViewColumn Header="Frame #" Width="Auto">
                                                                <GridViewColumn.CellTemplate >
                                                                    <DataTemplate>
                                                                        <TextBlock x:Name="tbResourceLinkID" Text="{Binding Path=FrameIDTitle}" HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="10"/>
                                                                    </DataTemplate>
                                                                </GridViewColumn.CellTemplate>
                                                            </GridViewColumn >

                                                            <!-- Column 2: File Type  -->
                                                            <GridViewColumn Header="Type" Width="50">
                                                                <GridViewColumn.CellTemplate >
                                                                    <DataTemplate>
                                                                        <TextBlock FontSize="10" Text="{Binding Path=Type}" HorizontalAlignment="Center"/>
                                                                    </DataTemplate>
                                                                </GridViewColumn.CellTemplate>
                                                            </GridViewColumn >

                                                            <!-- Column 3: Frame Title  -->
                                                            <GridViewColumn Header="Description" Width="200">
                                                                <GridViewColumn.CellTemplate >
                                                                    <DataTemplate>
                                                                        <TextBlock FontSize="10" Text="{Binding Path=Description, Mode=OneWay, Converter={StaticResource AssetTypeToStringConverter}}" HorizontalAlignment="Left"/>
                                                                    </DataTemplate>
                                                                </GridViewColumn.CellTemplate>
                                                            </GridViewColumn >

                                                            <!-- Column 4: Missing File Name / Path -->
                                                            <GridViewColumn Header="File Missing" Width="250">
                                                                <GridViewColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock x:Name="tbResourceLinkStatusDescription" Text="{Binding Path=FileName}" HorizontalAlignment="Left" FontSize="10"/>
                                                                    </DataTemplate>
                                                                </GridViewColumn.CellTemplate>
                                                            </GridViewColumn >

                                                            <!-- Column 5: Command Column  -->
                                                            <GridViewColumn Header="Commands" Width="65"  >
                                                                <GridViewColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <Button x:Name="cmdResourceLinkImport" Content="Fix" Height="16" Width="45" TextBlock.TextAlignment="Center" HorizontalAlignment="Center"/>
                                                                        </StackPanel>
                                                                    </DataTemplate>
                                                                </GridViewColumn.CellTemplate>
                                                            </GridViewColumn >

                                                        </GridView>
                                                    </ListView.View>
                                                </ListView >

                                                <!-- End ListView -->

                                            </Grid>
                                        </TabItem>
                                    </TabControl>

                                </Grid>

                                <!-- Disabler Lens -->
                                <Border x:Name="BlockingLensForExternalLinksTab" Background="#88000000" Visibility="Collapsed" Margin="3,3,3,8" CornerRadius="3,3,3,3"/>

                            </Grid>
                        </TabItem>
                        
                        
                        <TabItem x:Name="TabConsole">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Height="18" Width="86">
                                    <TextBlock Text="Console" Margin="3,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </TabItem.Header>
                            <TabItem.BitmapEffectInput>
                                <BitmapEffectInput/>
                            </TabItem.BitmapEffectInput>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch" CornerRadius="3,3,3,3" Margin="0,0,0,4">
                                    <Border.Background>
                                        <SolidColorBrush Color="{DynamicResource MainColor}"/>
                                    </Border.Background>
                                </Border>
                                <Border Background="{DynamicResource BackgroundBrush}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" CornerRadius="3,3,3,3" Margin="5,5,5,10"/>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0" Grid.Column="0" Margin="5,5,5,4">
                                    <Grid.Resources>
                                        <ContextMenu x:Key="ConsoleContextMenu">
                                            <MenuItem Command="ProducerAlpha:frmMain.SaveConsole"/>
                                            <MenuItem Command="ProducerAlpha:frmMain.ClearConsole"/>
                                        </ContextMenu>
                                    </Grid.Resources>


                                    <TextBox x:Name="txtConsole" ContextMenu="{StaticResource ConsoleContextMenu}" Width="Auto" Height="Auto" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" Margin="0,0,0,5" VerticalScrollBarVisibility="Auto"/>

                                </Grid>
                            
                                <!-- Disabler Lens -->
                                <Border x:Name="BlockingLensForConsoleTab" Background="#88000000" Visibility="Collapsed" Margin="3,3,3,8" CornerRadius="3,3,3,3"/>

                            </Grid>
                        </TabItem>

                    </TabControl>

                </Grid>

            </Grid>
        </DockPanel>
        
        <!-- Blocking Lens -->
        <Canvas x:Name="BlockingLens" 
                Background="Black" 
                Opacity=".7" 
                Grid.RowSpan="2" 
                VerticalAlignment="Stretch" 
                HorizontalAlignment="Stretch" 
                Visibility="Hidden"
        />

        <!-- Welcome Screen -->
        <ProducerAlpha:Welcome x:Name="Welcome" 
                               Opacity="1" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center" 
                               Grid.Row="0" 
                               Visibility="Hidden" 
                               NewButtonClick="WelcomeUserControl_NewButtonClick" 
                               OpenButtonClick="Welcome_OpenButtonClick" 
                               OpenRecentFileButtonClick="Welcome_OpenRecentFileButtonClick" 
                               Grid.RowSpan="2"
        />

        <!-- New Dialog -->
        <ProducerAlpha:NewDialog x:Name="NewDialog" 
                                 Opacity="1" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Center" 
                                 Grid.Row="0" 
                                 Visibility="Hidden" 
                                 CloseButtonClick="NewDialog_CloseButtonClick" 
                                 CancelButtonClick="NewDialog_CancelButtonClick" 
                                 OKButtonClick="NewDialog_OKButtonClick" 
                                 Grid.RowSpan="2"
        />

        <!-- Select Channel Dialog -->
        <ProducerAlpha:WebChannelSelector x:Name="WebChannelSelectorDialog" 
                                          Opacity="1" 
                                          VerticalAlignment="Center" 
                                          HorizontalAlignment="Center" 
                                          Grid.Row="0" 
                                          Visibility="Hidden" 
                                          Grid.RowSpan="2"
                                          OKButtonClick="WebChannelSelectorDialog_OKButtonClick" 
                                          CancelButtonClick="WebChannelSelectorDialog_CancelButtonClick"
        />

    </Grid>
</Window>