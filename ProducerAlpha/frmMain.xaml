<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ms="http://namespaces.mindscape.co.nz/wpf"    
	xmlns:ProducerAlpha="clr-namespace:ProducerAlpha"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:m="clr-namespace:Wpf.Controls;assembly=Wpf.SplitButton"
    xmlns:tlc="clr-namespace:TimelineController.Components;assembly=TimelineController"
    mc:Ignorable="d" 
    x:Class="ProducerAlpha.frmMain"
	x:Name="Window"
	Width="1281" 
    Height="768" 
    HorizontalContentAlignment="Stretch" 
    VerticalContentAlignment="Stretch" 
    MinWidth="1024" 
    Background="{DynamicResource BackgroundBrush}"
    MinHeight="640"
    Icon="/Assets/Icons/WayvIcon.png"
    WindowState="Maximized"
    SnapsToDevicePixels="True"
    LayoutUpdated="Window_LayoutUpdated"
    Loaded="Window_Loaded"
    SizeChanged="Window_SizeChanged"
    Closing="Window_Closing"
    Title="Wayv Producer - Alpha v.1.1"
    >

    <!-- Window Resources -->
    <Window.Resources>
        <ResourceDictionary>            
            <ResourceDictionary.MergedDictionaries>
                <ms:Alloy/>
            </ResourceDictionary.MergedDictionaries>
            <ProducerAlpha:FormattingConverter x:Key="FormattingConverter"/>
            <ms:RowToDescriptionConverter x:Key="RowToDescription" />
            <ProducerAlpha:ToStringEnumerationTagConverter x:Key="ToStringEnumerationTagConverter"/>
            <ProducerAlpha:ToStringEnumerationProducerConverter x:Key="ToStringEnumerationProducerConverter"/>
            <ProducerAlpha:ToStringEnumerationDirectorConverter x:Key="ToStringEnumerationDirectorConverter"/>
            <ProducerAlpha:ToStringEnumerationDesignerConverter x:Key="ToStringEnumerationDesignerConverter"/>
            <ProducerAlpha:ToStringEnumerationSpeakerConverter x:Key="ToStringEnumerationSpeakerConverter"/>
            <ProducerAlpha:ToStringEnumerationComposerConverter x:Key="ToStringEnumerationComposerConverter"/>
            <ProducerAlpha:ToStringEnumerationDeveloperConverter x:Key="ToStringEnumerationDeveloperConverter"/>
            <ProducerAlpha:IAcceptsControlsToBooleanConverter x:Key="IAcceptsControlsToBooleanConverter"/>
            <ProducerAlpha:IAcceptsBackgroundImageToBooleanConverter x:Key="IAcceptsBackgroundImageToBooleanConverter"/>
            <ProducerAlpha:FrameToSourceConverter x:Key="FrameToSourceConverter"/>
            <ProducerAlpha:HasXamlLoadedToBooleanConverter x:Key="HasXamlLoadedToBooleanConverter"/>
            <ProducerAlpha:RowBackgroundConverter x:Key="RowBackgroundConverter"/>
            <ProducerAlpha:DetectXamlImportStatusImageConverter x:Key="DetectXamlImportStatusImageConverter"/>
            <ProducerAlpha:DetectXamlImportStatusTextConverter x:Key="DetectXamlImportStatusTextConverter"/>            
            <ProducerAlpha:XamlLinkRemoveXamlButtonVisibilityConverter x:Key="XamlLinkRemoveXamlButtonVisibilityConverter"/>
            <ProducerAlpha:XamlLinkCreateLinkButtonVisibilityConverter x:Key="XamlLinkCreateLinkButtonVisibilityConverter"/>
            <ProducerAlpha:XamlLinkUpdateLinkButtonVisibilityConverter x:Key="XamlLinkUpdateLinkButtonVisibilityConverter"/>
            <ProducerAlpha:XamlLinkRemoveLinkButtonVisibilityConverter x:Key="XamlLinkRemoveLinkButtonVisibilityConverter"/>
            <ProducerAlpha:IAcceptsControlsToBooleanForXamlImportConverter  x:Key="IAcceptsControlsToBooleanForXamlImportConverter"/>
            <ProducerAlpha:AssetTypeToStringConverter  x:Key="AssetTypeToStringConverter"/>            
        </ResourceDictionary>
        
    </Window.Resources>
    
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.New"                   CanExecute="CommandCanExecute" Executed="CommandExecuted"/>
        <CommandBinding Command="ApplicationCommands.Open"                  CanExecute="CommandCanExecute" Executed="CommandExecuted"/>
        <CommandBinding Command="ApplicationCommands.Save"                  CanExecute="CommandCanExecute" Executed="CommandExecuted"/>
        <CommandBinding Command="ApplicationCommands.Close"                 CanExecute="CommandCanExecute" Executed="CommandExecuted"/>
        <CommandBinding Command="ProducerAlpha:frmMain.ImportCommand"       CanExecute="CommandCanExecute" Executed="CommandExecuted"/>
        <CommandBinding Command="ProducerAlpha:frmMain.ExportCommand"       CanExecute="CommandCanExecute" Executed="CommandExecuted"/>
        <CommandBinding Command="ProducerAlpha:frmMain.PreviewCommand"      CanExecute="CommandCanExecute" Executed="CommandExecuted"/>        
        <CommandBinding Command="ProducerAlpha:frmMain.PublishCommand"      CanExecute="CommandCanExecute" Executed="CommandExecuted"/>
        <CommandBinding Command="ProducerAlpha:frmMain.HelpContentsCommand" CanExecute="CommandCanExecute" Executed="CommandExecuted"/>
        <CommandBinding Command="ProducerAlpha:frmMain.AboutCommand"        CanExecute="CommandCanExecute" Executed="CommandExecuted"/>

        <CommandBinding Command="ProducerAlpha:frmMain.SaveConsole"         CanExecute="CommandCanExecute" Executed="CommandExecuted"/>
        <CommandBinding Command="ProducerAlpha:frmMain.ClearConsole"        CanExecute="CommandCanExecute" Executed="CommandExecuted"/>
    </Window.CommandBindings>
    
    <!-- UI Definition Section -->
    <Grid x:Name="LayoutRoot" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Main Menu Section -->
        <Menu Visibility="Visible" Grid.Row="0" HorizontalAlignment="Stretch" Margin="0,1,0,0" Width="Auto" Height="Auto">
            
            <MenuItem Header="_Project" Style="{DynamicResource ExpressiveMenuItem}">
                <MenuItem Command="ApplicationCommands.New"/>
                <MenuItem Command="ApplicationCommands.Open" x:Name="OpenMenu"/>
                <MenuItem Command="ApplicationCommands.Save"/>
                <Separator/>
                <MenuItem Command="ProducerAlpha:frmMain.ImportCommand" InputGestureText="Ctrl+I"/>
                <MenuItem Command="ProducerAlpha:frmMain.ExportCommand" InputGestureText="Ctrl+E"/>
                <Separator/>
                <MenuItem Command="ProducerAlpha:frmMain.PreviewCommand" InputGestureText="Ctrl+R"/>
                <MenuItem Command="ProducerAlpha:frmMain.PublishCommand" InputGestureText="Ctrl+H"/>
                <Separator/>
                <MenuItem  Command="ApplicationCommands.Close" InputGestureText="Ctrl+X"/>
            </MenuItem>

            <MenuItem Header="_Help" Style="{DynamicResource ExpressiveMenuItem}">
                <MenuItem Command="ProducerAlpha:frmMain.HelpContentsCommand" InputGestureText="Ctrl+H"/>
                <Separator/>
                <MenuItem Command="ProducerAlpha:frmMain.AboutCommand"/>
            </MenuItem>
            
        </Menu>

        <!-- Main Application UI Section -->
        <DockPanel x:Name="PaneContainer" LastChildFill="True" Grid.Row="1" Margin="0,0,0,0">

            <!-- Side Bar -->
            <StackPanel DockPanel.Dock="Left" HorizontalAlignment="Left" Width="Auto" Height="Auto" VerticalAlignment="Stretch" x:Name="LeftPane" Margin="0,1,0,0">
                <TabControl x:Name="tabctrlSidePane" IsSynchronizedWithCurrentItem="True" Width="Auto" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" >
                    <TabItem x:Name="ScriptTab" Width="193">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Height="18" Width="86" HorizontalAlignment="Left">
                                <TextBlock Text="{DynamicResource TabItemScript}" Margin="3,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>

                        <Grid Height="600" Width="390" x:Name="MainScriptPane" Margin="-2,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="ScriptPaneDivider" Height="Auto" MinHeight="29" MaxHeight="300"/>
                                <RowDefinition Height="*" MinHeight="29"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Expander x:Name="ScriptPane" Collapsed="ScriptPane_Collapsed" Expanded="ScriptPane_Expanded" Height="Auto" Header="{DynamicResource HeaderExpanderFrames}" Grid.Row="0" Margin="4,0,4,4" VerticalAlignment="Stretch" IsExpanded="True" SizeChanged="ScriptPane_SizeChanged">
                                <Grid x:Name="ScriptEditorBody" Margin="4,4,4,4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="32"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.RowSpan="2" CornerRadius="3,3,3,3" Background="#99222222" Margin="0,0,0,2"/>

                                    <StackPanel x:Name="ScriptEditorMainPanelControls" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,-17,0">

                                        <m:SplitButton ToolTip="{DynamicResource ToolTipNewFrame}" x:Name="cmdAddFrame" Placement="Bottom" Height="23.823" FontSize="14" VerticalAlignment="Top" Style="{DynamicResource SplitButtonStyle}" Click="cmdAddFrame_Click" Margin="0,0,5,0">
                                            <MenuItem Header="{DynamicResource WebSlide}" x:Name="mnuAddWebSlide" Style="{DynamicResource ContextMenuStyle}" Click="mnuAddWebSlide_Click" IsChecked="True"/>
                                            <MenuItem Header="{DynamicResource VideoFrame}" x:Name="mnuAddVideoFrame" Style="{DynamicResource ContextMenuStyle}" Click="mnuAddVideoFrame_Click"/>
                                            <MenuItem Header="{DynamicResource ConversationalPoll}" x:Name="mnuAddConversationalPoll" Style="{DynamicResource ContextMenuStyle}" Click="mnuAddConversationalPoll_Click"/>
                                            <MenuItem Header="{DynamicResource PageShot}" x:Name="mnuAddPageShot" Style="{DynamicResource ContextMenuStyle}" Click="mnuAddPageShot_Click"/>
                                            <MenuItem Header="{DynamicResource PageFrame}" x:Name="mnuAddPageFrame" Style="{DynamicResource ContextMenuStyle}" Click="mnuAddPageFrame_Click"/>
                                        </m:SplitButton>

                                        <Button ToolTip="{DynamicResource ToolTipDelete}" HorizontalAlignment="Right" Height="23.823" Width="24" FontSize="14" x:Name="cmdDeleteFrame" VerticalAlignment="Top" Click="cmdRemoveScriptItem_Click" Margin="0,0,5,0">
                                            <Canvas x:Name="Minus" Width="16" Height="15.9643" Margin="2,9.5,2,4">
                                                <Rectangle x:Name="MinusRect" Width="17" Height="7" Canvas.Left="0" Fill="{DynamicResource SolidBorderBrush}" Stroke="#FF000000"/>
                                                <Canvas.RenderTransform>
                                                    <ScaleTransform ScaleX="0.70" ScaleY="0.70"/>
                                                </Canvas.RenderTransform>
                                            </Canvas>
                                        </Button>

                                        <Button x:Name="cmdMoveUp" ToolTip="{DynamicResource ToolTipMoveUp}" HorizontalAlignment="Right" Width="24" Height="23.823" FontSize="14" VerticalAlignment="Top" Margin="0,0,5,0" Click="cmdMoveUp_Click">
                                            <Canvas Width="14" Height="14" Canvas.Left="0" Canvas.Top="0">
                                                <Path Width="15" Height="15" Canvas.Left="-8.9407e-008" Canvas.Top="9.53674e-007" Stretch="Fill" StrokeLineJoin="Round" Stroke="#FF000000" Fill="{DynamicResource SolidBorderBrush}" Data="F1 M 4.98438,8.5L 0.5,8.5L 7.5,0.500001L 14.5,8.5L 9.5,8.5L 12.5156,14.5L 2.5,14.5L 4.98438,8.5 Z "/>
                                            </Canvas>
                                        </Button>

                                        <Button x:Name="cmdMoveDown" ToolTip="{DynamicResource ToolTipMoveDown}" HorizontalAlignment="Right" Width="24" Height="23.823" FontSize="14" VerticalAlignment="Top" Margin="0,0,5,0" Click="cmdMoveDown_Click">
                                            <Canvas Width="16" Height="16" Canvas.Left="0" Canvas.Top="0">
                                                <Path Width="15" Height="15.0116" Canvas.Left="0.494532" Canvas.Top="2" Stretch="Fill" StrokeLineJoin="Round" Stroke="#FF000000" Fill="{DynamicResource SolidBorderBrush}" Data="F1 M 10.5101,7.00585L 14.9945,7.01627L 7.97592,15L 0.994532,6.98373L 5.99452,6.99535L 2.99285,0.988361L 13.0084,1.01164L 10.5101,7.00585 Z "/>
                                            </Canvas>
                                        </Button>

                                        <ToggleButton x:Name="cmdToggleExapandMode" IsChecked="{Binding Path=IsToggleModeActive, Mode=TwoWay}" ToolTip="{DynamicResource ToolTipToggleExpandMode}" HorizontalAlignment="Right" Width="24" Height="23.823" FontSize="14" VerticalAlignment="Top" Margin="0,0,5,0" Style="{DynamicResource ScriptPaneToggleButton}" Checked="cmdToggleExapandMode_Checked" Unchecked="cmdToggleExapandMode_Unchecked">
                                            <Canvas Width="16" Height="15" Canvas.Left="0" Canvas.Top="1">
                                                <Rectangle x:Name="Rectangle" Width="13" Height="3.51563" Canvas.Left="1.24219" Canvas.Top="0.75" Stretch="Fill" StrokeThickness="0.5" StrokeLineJoin="Round" Stroke="#FF252525" Fill="#FF7F7C7C"/>
                                                <Rectangle x:Name="Rectangle_0" Width="13" Height="2.5" Canvas.Left="1.24219" Canvas.Top="12.75" Stretch="Fill" StrokeThickness="0.5" StrokeLineJoin="Round" Stroke="#FF2C2C2C" Fill="#FFD7D7D7"/>
                                                <Path Width="13" Height="6.5" Canvas.Left="1.24219" Canvas.Top="5.26562" Stretch="Fill" StrokeThickness="0.5" StrokeLineJoin="Round" Stroke="#FF2C2C2C" Fill="#FFA2A2A2" Data="F1 M 13.9922,5.51562L 13.9922,11.5156L 1.49219,11.5156L 1.49219,5.51562L 13.9922,5.51562 Z "/>
                                            </Canvas>
                                        </ToggleButton>

                                        <Button ToolTip="{DynamicResource ToolTipCollapse}" HorizontalAlignment="Right" Width="24" Height="23.823" FontSize="14" x:Name="cmdCollapse" VerticalAlignment="Top" Click="cmdCollapseItems_Click" Margin="0,0,5,0">
                                            <Canvas Width="15.9375" Height="15.8333" Margin="0,3.5,2,4">
                                                <Path Width="10.2422" Height="10" Canvas.Left="5.01563" Canvas.Top="6" Stretch="Fill" StrokeLineJoin="Round" Stroke="#FF2C2C2C" Fill="{DynamicResource SolidBorderBrush}" Data="F1 M 9.19613,9.2648L 6.64844,6.5L 14.7578,6.71875L 14.2578,15.1875L 11.9368,12.8018L 8.26345,15.5L 5.51563,11.9071L 9.19613,9.2648 Z "/>
                                                <Path Width="9.54088" Height="10.012" Canvas.Left="0.492187" Canvas.Top="0.00362682" Stretch="Fill" StrokeLineJoin="Round" Stroke="#FF2C2C2C" Fill="{DynamicResource SolidBorderBrush}" Data="F1 M 6.16557,6.56443L 8.47656,9.51563L 0.992187,8.73438L 1.27344,0.765625L 3.67332,3.1178L 7.03443,0.503627L 9.53306,4.00465L 6.16557,6.56443 Z "/>
                                            </Canvas>
                                        </Button>

                                        <Button ToolTip="{DynamicResource ToolTipExpand}" HorizontalAlignment="Right" Width="24" Height="23.823" FontSize="14" x:Name="cmdExpand" VerticalAlignment="Top" Click="cmdExpandItems_Click" Margin="0,0,5,0">
                                            <Canvas Width="16" Height="16" Margin="0,3.5,2,4">
                                                <Path Width="10.2422" Height="10" Canvas.Left="6.01562" Canvas.Top="6" Stretch="Fill" StrokeLineJoin="Round" Stroke="#FF2C2C2C" Fill="{DynamicResource SolidBorderBrush}" Data="F1 M 12.0773,12.7352L 14.625,15.5L 6.51562,15.2813L 7.01562,6.8125L 9.33666,9.19819L 13.01,6.5L 15.7578,10.0929L 12.0773,12.7352 Z "/>
                                                <Path Width="9.54088" Height="10.012" Canvas.Left="0.500016" Canvas.Top="-0.0106306" Stretch="Fill" StrokeLineJoin="Round" Stroke="#FF2C2C2C" Fill="{DynamicResource SolidBorderBrush}" Data="F1 M 4.36752,3.44056L 2.05652,0.489369L 9.54089,1.27062L 9.25964,9.23937L 6.85976,6.88719L 3.49866,9.50137L 1.00002,6.00034L 4.36752,3.44056 Z "/>
                                            </Canvas>
                                        </Button>

                                        <Button ToolTip="{DynamicResource ToolTipExportToTeleprompt}" HorizontalAlignment="Right" Width="24" Height="23.823" FontSize="14" x:Name="cmdExport" VerticalAlignment="Top" Margin="0,0,0,0">
                                            <Canvas Width="16" Height="16" Canvas.Left="0" Canvas.Top="0" Margin="-0.5,3.5,5,5">
                                                <Viewbox x:Name="Group" Width="12.5141" Height="16.584" Canvas.Left="2.67813" Canvas.Top="-0.304043">
                                                    <Canvas Width="12.5141" Height="16.584">
                                                        <Path Width="9.32047" Height="16.584" Canvas.Left="3.1936" Canvas.Top="0" Stretch="Fill" StrokeThickness="1" StrokeLineJoin="Round" Stroke="#FF2C2C2C" Fill="{DynamicResource SolidBorderBrush}" Data="F1 M 4.1936,15.584L 11.5141,8.28486L 4.20784,1"/>
                                                        <Ellipse x:Name="Ellipse" Width="5.47509" Height="5.43236" Canvas.Left="-4.76837e-007" Canvas.Top="5.6755" Stretch="Fill" StrokeThickness="1" StrokeLineJoin="Round" Stroke="#FF2C2C2C" Fill="{DynamicResource SolidBorderBrush}"/>
                                                    </Canvas>
                                                </Viewbox>
                                            </Canvas>
                                        </Button>
                                        <StackPanel.RenderTransform>
                                            <ScaleTransform ScaleX="0.85" ScaleY="0.85" />
                                        </StackPanel.RenderTransform>
                                    </StackPanel>

                                    <!-- Script Items Collection -->
                                    <ListBox x:Name="ScriptListBox" Margin="0,0,1,4" ScrollViewer.CanContentScroll="False" IsSynchronizedWithCurrentItem="True" Grid.Row="1" ItemsSource="{Binding Path=Frames, Mode=TwoWay}" ItemTemplate="{DynamicResource ScriptEntriesTemplate}" ScrollViewer.VerticalScrollBarVisibility="Visible" GotFocus="ScriptListBox_GotFocus" Button.Click="ScriptListBox_ButtonClick" Expander.Expanded="ScriptListBox_Expanded" Expander.Collapsed="ScriptListBox_Collapsed" LostFocus="ScriptListBox_LostFocus" SelectionChanged="ScriptListBox_SelectionChanged"/>
                                    
                                </Grid>
                            </Expander>

                            <GridSplitter x:Name="OScriptPaneSplitter"
                                          Grid.Row="0" 
                                          ResizeDirection="Rows"
                                          HorizontalAlignment="Stretch"
					                      Height="4"
                                          VerticalAlignment="Bottom"
				            />

                            <Expander x:Name="PropertiesPane" Collapsed="PropertiesPane_Collapsed" Expanded="PropertiesPane_Expanded" MinHeight="27" Header="{DynamicResource HeaderExpanderProperties}" Grid.Row="1" Margin="4,0,4,4" Height="Auto" VerticalAlignment="Stretch" IsExpanded="True">
                                <Grid x:Name="PropertiesPaneGrid" Background="{DynamicResource ExpanderHeaderColorBrush}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition  MinHeight="0" Height="48"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border MinHeight="0" Grid.RowSpan="1" CornerRadius="3,3,3,3" Background="#ba222222" Margin="4,4,4,5"/>
                                    <ms:PropertyGrid Name="OPropertyGrid" MinHeight="0" Grid.Row="0" Grid.Column="0" Margin="6,5,5,8" Style="{DynamicResource {x:Static ms:Alloy.StyleKey}}" AllowModifyCollections="False" Grouping='{x:Static ms:PropertyGrouping.ByCategory}'/>
                                    <TextBox x:Name="txtPropertyDescription" Height="Auto" MinHeight="0" Text="{Binding SelectedGridItem.Node.HumanName, ElementName=OPropertyGrid}"  Style="{DynamicResource PropertyGridDescriptionBox}" Grid.Row="1" Margin="4,0,4,5" AcceptsReturn="True" TextWrapping="Wrap" MaxLength="500" IsReadOnly="True"/>
                                </Grid>
                            </Expander>

                            <Border x:Name="BlockingLensForFrame" Background="#88000000" Grid.RowSpan="2" Visibility="Collapsed" Margin="3,0,3,5" CornerRadius="3,3,3,3"/>

                        </Grid>
                    </TabItem>




                    <TabItem x:Name="ShowTab" HorizontalAlignment="Left" Width="193">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Height="18" Width="Auto" HorizontalAlignment="Left">
                                <TextBlock Text="{DynamicResource TabItemShow}" Margin="3,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>

                        <Grid x:Name="MainShowPane" Height="600" Width="390" Margin="-2,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="ShowPaneDivider" Height="Auto" MinHeight="29" MaxHeight="500"/>
                                <RowDefinition Height="*" MinHeight="29"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>


                            <Expander x:Name="ShowInfoPane" Header="{DynamicResource HeaderExpanderMetadata}" Grid.Row="0" Height="Auto" Margin="4,0,4,4" Padding="12,12,12,12" VerticalAlignment="Stretch" IsExpanded="True" SizeChanged="ShowInfoPane_SizeChanged" Collapsed="ShowInfoPane_Collapsed" Expanded="ShowInfoPane_Expanded">
                                <Grid Margin="4,4,4,5">
                                    <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch" CornerRadius="3,3,3,3" Background="#ba222222"/>
                                    <ScrollViewer x:Name="ShowInfoPaneScrollViewer" HorizontalScrollBarVisibility="Disabled"  VerticalScrollBarVisibility="Visible"  Width="Auto" Height="Auto" Margin="2,4,2,4">
                                        <Grid x:Name="ShowInfoPaneGrid" Margin="10,8,10,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="25"/>
                                                <RowDefinition Height="69"/>
                                                <RowDefinition Height="69"/>
                                                <RowDefinition Height="6"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.RowSpan="5" Grid.ColumnSpan="2" CornerRadius="3,3,3,3" Background="{DynamicResource SelectedBackgroundBrush}" Margin="-8,-6,-8,0"/>

                                            <TextBlock Text="{DynamicResource ShowProps_Title}" Grid.Row="0" Grid.Column="0" FontFamily="Century Gothic" Style="{DynamicResource DefaultTextBlock}"/>
                                            <TextBox x:Name="txtShowTitle" Grid.Row="0" Grid.Column="1" Margin="0,0,0,4" MaxLength="100" Text="{Binding Path=Title, Mode=TwoWay}"/>

                                            <TextBlock Text="{DynamicResource ShowProps_Synopsis}" Grid.Row="1" Grid.Column="0" FontFamily="Century Gothic" Style="{DynamicResource DefaultTextBlock}"/>
                                            <TextBox x:Name="txtShowSynopsis" Grid.Row="1" VerticalScrollBarVisibility="Visible" Margin="0,0,0,4" AcceptsReturn="True" TextWrapping="Wrap" Grid.Column="1" MaxLength="500" Text="{Binding Path=Synopsis, Mode=TwoWay}"/>

                                            <TextBlock Text="{DynamicResource ShowProps_Tags}" Grid.Row="2" Grid.Column="0" FontFamily="Century Gothic" Style="{DynamicResource DefaultTextBlock}"/>
                                            <TextBox x:Name="txtShowTags" Grid.Row="2" VerticalScrollBarVisibility="Visible" Margin="0,0,0,4" AcceptsReturn="True" TextWrapping="Wrap" Grid.Column="1" MaxLength="300" Text="{Binding Path=Tags, Mode=TwoWay,  Converter={StaticResource ToStringEnumerationTagConverter}}"/>

                                            <Expander x:Name="ContributorsExpander" Grid.Row="4" Grid.ColumnSpan="2" Margin="-9,0,-5,0" Style="{DynamicResource PanelExpander}" IsExpanded="False" VerticalAlignment="Stretch" ExpandDirection="Down" Height="Auto" Width="Auto" Expanded="ContributorsExpander_Expanded" Collapsed="ContributorsExpander_Collapsed">
                                                <Grid  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="10"/>
                                                        <RowDefinition Height="48"/>
                                                        <RowDefinition Height="48"/>
                                                        <RowDefinition Height="48"/>
                                                        <RowDefinition Height="48"/>
                                                        <RowDefinition Height="48"/>
                                                        <RowDefinition Height="48"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Text="{DynamicResource Credits_Producers}" Grid.Row="1" Grid.Column="0" FontFamily="Century Gothic" Style="{DynamicResource DefaultTextBlock}"/>
                                                    <TextBox x:Name="txtShowProducers" Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Visible" Margin="0,0,0,4" AcceptsReturn="True" TextWrapping="Wrap" MaxLength="500" Text="{Binding Path=Credits.Producers, Mode=TwoWay,  Converter={StaticResource ToStringEnumerationProducerConverter}}"/>

                                                    <TextBlock Text="{DynamicResource Credits_Directors}" Grid.Row="2" Grid.Column="0" FontFamily="Century Gothic" Style="{DynamicResource DefaultTextBlock}"/>
                                                    <TextBox x:Name="txtShowDirectors" Grid.Row="2" Grid.Column="1" VerticalScrollBarVisibility="Visible" Margin="0,0,0,4" AcceptsReturn="True" TextWrapping="Wrap" MaxLength="500" Text="{Binding Path=Credits.Directors, Mode=TwoWay,  Converter={StaticResource ToStringEnumerationDirectorConverter}}"/>

                                                    <TextBlock Text="{DynamicResource Credits_Designers}" Grid.Row="3" Grid.Column="0" FontFamily="Century Gothic" Style="{DynamicResource DefaultTextBlock}"/>
                                                    <TextBox x:Name="txtShowDesigners" Grid.Row="3" Grid.Column="1" VerticalScrollBarVisibility="Visible" Margin="0,0,0,4" AcceptsReturn="True" TextWrapping="Wrap" MaxLength="500" Text="{Binding Path=Credits.Designers, Mode=TwoWay,  Converter={StaticResource ToStringEnumerationDesignerConverter}}"/>

                                                    <TextBlock Text="{DynamicResource Credits_Speakers}" Grid.Row="4" Grid.Column="0" FontFamily="Century Gothic" Style="{DynamicResource DefaultTextBlock}"/>
                                                    <TextBox x:Name="txtShowSpeakers" Grid.Row="4" VerticalScrollBarVisibility="Visible" Margin="0,0,0,4" AcceptsReturn="True" TextWrapping="Wrap" Grid.Column="1" MaxLength="300" Text="{Binding Path=Credits.Speakers, Mode=TwoWay,  Converter={StaticResource ToStringEnumerationSpeakerConverter}}"/>

                                                    <TextBlock Text="{DynamicResource Credits_Composers}" Grid.Row="5" Grid.Column="0" FontFamily="Century Gothic" Style="{DynamicResource DefaultTextBlock}"/>
                                                    <TextBox x:Name="txtShowComposers" Grid.Row="5" VerticalScrollBarVisibility="Visible" Margin="0,0,0,4" AcceptsReturn="True" TextWrapping="Wrap" Grid.Column="1" MaxLength="300" Text="{Binding Path=Credits.Composers, Mode=TwoWay,  Converter={StaticResource ToStringEnumerationComposerConverter}}"/>

                                                    <TextBlock Text="{DynamicResource Credits_Developers}" Grid.Row="6" Grid.Column="0" FontFamily="Century Gothic" Style="{DynamicResource DefaultTextBlock}"/>
                                                    <TextBox x:Name="txtShowDevelopers" Grid.Row="6" VerticalScrollBarVisibility="Visible" Margin="0,0,0,4" AcceptsReturn="True" TextWrapping="Wrap" Grid.Column="1" MaxLength="300" Text="{Binding Path=Credits.Developers, Mode=TwoWay,  Converter={StaticResource ToStringEnumerationDeveloperConverter}}"/>
